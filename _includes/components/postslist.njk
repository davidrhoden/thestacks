<section>
	{% for post in postslist | reverse %}
		<article{% if post.url == url %} data-current="current item"{% endif %}>
			<p>
				<time datetime="{{ post.date | machineDate }}">
					<small>{{ post.date | readableDate }}</small>
				</time>
			</p>
			<h3>
				<a href="{{ post.url | url }}">
					{% if post.data.title %}
						{{ post.data.title }}
					{% endif %}
				</a>
			</h3>
			{% if post.data.summary %}
				<p>
					{{ post.data.summary }}
				</p>
				<p><a href="{{ post.url | url }}"><small>READ MORE...</small></a></p>
			{% endif %}
			{% if post.data.image %}
	      <img class="news-featured-image" src="/static/img/{{ post.data.image }}" alt="{{post.data.title}}">
	    {% endif %}
		</article>
	{% endfor %}
</section>
