<section>
	{% for post in postslist | reverse %}
		<article{% if post.url == url %} data-current="current item"{% endif %}>
			<p class="showdate">
			{# loop.index #}
				{#  # if post.data.image %}
					<img src="/static/img/{{ post.data.image }}">
				{% endif #}
				<time datetime="{{ post.date | machineDate }}">
					<small>{{ post.date | readableDate }}</small>
				</time>
			</p>
			<p>
				<a class="showlist" href="{{ post.url | url }}">
					{% if post.data.title %}
						{{ post.data.title }}
					{% endif %}
				</a>
			</p>
		</article>
	{% endfor %}
</section>
